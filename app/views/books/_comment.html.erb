<table class="table table-hover table-invers">
  <thead>
      
            <% @book.book_comments.each do |book_comment| %>
            <tr>
              <td><%= link_to user_path(book_comment.user) do %>
                <%= attachment_image_tag book_comment.user, :profile_image, size: "50x50", fallback: "no-image-icon.jpg" %><br>
                <%= book_comment.user.name  %>
              <% end %>
              </td>
              <td><%= book_comment.comment %></td>
                <td><% if book_comment.user_id == current_user.id %>
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book.id, book_comment.id), class: 'btn-sm btn-danger',method: :delete, remote: true%>
                  <% end %>
                </td>
              <td class="comment-date pull-right">
                <%= book_comment.created_at.strftime('%Y/%m/%d') %>
              </td>
              </tr>
            <% end %>
          </table>
        </div>
      </tr>
    </thead>
  </tbody>
</table>