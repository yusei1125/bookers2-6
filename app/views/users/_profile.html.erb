<table class="table table-user">
  <h2>User info</h2>
		<tr><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no-image-icon.jpg"%></tr>
		<tr>
		  <th>name</th>
		  <th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th><%= "follow" %></th>
			<th><%= link_to "#{user.follower.count}", follow_user_path(user.id) %></th>
		</tr>
		<tr>
			<th><%= "follower" %></th>
			<th><%= link_to "#{user.followed.count}", follower_user_path(user.id) %></th>
		</tr>
		<tr>
			<% unless current_user == user %>
        <% if current_user.following?(user) %>
          <th><%= link_to 'Unfollow', unfollow_path(user.id), method: :POST, class: 'btn btn-outline-danger' %></th>
        <% else %>
          <th><%= link_to 'Follow', follow_path(user.id), method: :POST, class: 'btn btn-outline-primary' %></th>
        <% end %>
      <% end %>
		</tr>
</table>

	<div class="row">
  	<td><%= link_to " ", edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></td>
	</div>
