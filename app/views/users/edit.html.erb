  <div class="container">
          <p id="notice"></p>
        <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3 class="text-danger"><%= pluralize(@user.errors.count,"error") %> prohibited this product from being saved:</h3>
        <ul><% @user.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
      </ul>
    </div>
        <% end %>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
          <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
              <label>name</label>
              <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
                <label>Image</label>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"form-control-file user_image" %>
          </div>
          <div class="form-group">
              <label>introduction</label>
              <%= f.text_area :introduction, class:"form-control book_body" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>